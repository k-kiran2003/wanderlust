<% layout('layouts/boilerplate') %>

<body>
    <h1>Create a new Listing</h1>
        <div class="row offset-2 mt-3">
    <form method="post" action="/listing" enctype="multipart/form-data" novalidate class="needs-validation">
      <div class="col-8">
    <div class="mb-2">
            <label for="title" class="form-label">Give Title</label>
            <input required id="title" type="text" class="form-control" name="listing[title]" placeholder="title">
        <div class="valid-feedback">
          Title Looks good!
        </div>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea required id="description" class="form-control" name="listing[description]"
                placeholder="description"></textarea>
                <div  class="invalid-feedback">
                    Please enter a description.
                </div>

        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Add Image</label>
        
            <input type="file" id="image" class="form-control" name="listing[image]" required>
        
        </div>
        <div class="mb-2">
            <label for="price" class="form-label">Add Price</label>
<input required type="number" id="price" class="form-control" name="listing[price]" placeholder="enter Price">
<div class="invalid-feedback">
    Please enter a Price.
</div>




        </div>
        <div class="mb-2">
            <label for="location" class="form-label">Add Location</label>
            <input required type="text" id="location" class="form-control" name="listing[location]" placeholder="Location">
<div class="invalid-feedback">
    Please enter Location.
</div>
        </div>
          <div class="mb-2">
            <label for="country" class="form-label">Add Country</label>
<input required type="text" min="0" name="listing[country]" class="form-control" id="country" placeholder="Country">
<div class="invalid-feedback">
    Please enter Country.
</div>
</div>  
<!-- category -->
<div class="mb-2">
    <label for="category" class="form-label">Select Category</label>
   <select class="mt-2" id="category" name="listing[category]">
    <option>Mountain-city</option>
    <option>Mountain</option>
    <option>Pools</option>
    <option>Camping</option>
    <option>Farms</option>
    <option>Castle</option>
    <option>Arctic</option>
    <option>Boats</option>
    <option>Camper Vans</option>
   </select>
    <div class="invalid-feedback">
        Please enter Country.
    </div>
</div>

    
  
        <button class="btn btn-danger mb-2">Add</button>
        </div>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>

