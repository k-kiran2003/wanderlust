<% layout('layouts/boilerplate') %>
<style>
    #filters{
       display: flex;
       align-items: center;
       flex-wrap: wrap;
    }
    .filter {
        text-align: center;
        margin-right: 1.5rem;
        margin-top: 1rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border:1px solid black;
        padding: 1rem;
        text-align: center;
margin-left: 5rem;
display: flex;
align-items: center;
        height: 3.5rem;
        border-radius: 1rem;
    }
</style>
<div id="filters">
    <div class="filter">
       <div> <i class="fa-solid fa-fire"></i></div>
       <p>Trending</p>
    </div>
    <div class="filter">
        <div> <i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountain-city</p>
    </div>
    <div class="filter">
        <div> <i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountain</p>
    </div>
    <div class="filter">
        <div> <i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p> Pools</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-van-shuttle"></i></div>
        <p>Camper Vans</p>
    </div>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
        <% for (let list of listingdata) { %>
            <div class="col d-flex justify-content-center">
                <a href="/listing/<%= list._id %>" class="text-decoration-none text-dark">
                    <div class="card card-listing" style="width: 20rem;">
                        <img src="<%= list.image?.url || '/default.jpg' %>" class="card-img-top" alt="image"
                            style="height: 20rem; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-text">
                                <strong>
                                    <%= list.title %>
                                </strong><br>
                                â‚¹<%= list.price ? list.price.toLocaleString("en-IN") : 0 %>/night
                                <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>
    <script>
        let toggleBtn = document.getElementById("switchCheckDefault");
        toggleBtn.addEventListener("click",()=>{
           let taxInfo = document.getElementsByClassName("tax-info");
          for (info of taxInfo){

            if(info.style.display !="inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";    
            }
          }
        })
    </script>