
<% layout('layouts/boilerplate') %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login on WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="post" novalidate class="needs-validation">
                <div class="col-8">
                    <div class="mb-2">
                        <label for="username" class="form-label">Username</label>
                        <input required id="username" type="text" class="form-control" name="username" id="username"
                            placeholder="username">
                       
                    </div>
                    
                        <div class="mb-2">
                            <label for="password" class="form-label">Password</label>
                            <input class="form-control" required type="password" id="password" class="form-control"
                                name="password">
                        </div>
                    </div>
                    <button class="btn btn-success">Login</button>
            </form>
        </div>

    </div>