<% layout('layouts/boilerplate') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" novalidate class="needs-validation">
                <div class="col-8">
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input required id="username" type="text" class="form-control" name="username" id="username" placeholder="username">
                <div class="valid-feedback">
                     Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input required id="email" class="form-control" name="email" type="email"
                    placeholder="abc@gmail.com">
                <div class="invalid-feedback">
                    Enter valid Email 
                </div></div>
                <div class="mb-2">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" required type="password" id="password" class="form-control" name="password">
                </div>
                </div>

<button class="btn btn-success">signUp</button>
        </form>
    </div>

</div>
